<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">

    <ImageView
        android:id="@+id/article_image_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <TextView
        android:id="@+id/article_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_image_view"
        android:fontFamily="sans-serif-medium"
        android:maxLines="3"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/article_title_text_view"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <TextView
        android:id="@+id/publisher_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:layout_below="@+id/article_title_text_view"
        android:layout_toRightOf="@+id/logo_image_view"
        android:layout_toEndOf="@+id/logo_image_view" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_below="@+id/publisher_text_view"
        android:layout_toRightOf="@+id/logo_image_view"
        android:layout_toEndOf="@+id/logo_image_view" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:layout_below="@+id/publisher_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>